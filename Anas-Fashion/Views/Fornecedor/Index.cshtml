@model IEnumerable<FornecedorModel>

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Fornecedor</h1>
		<a class="btn btn-success mx-2" asp-controller="Fornecedor" asp-action="Cadastrar">Cadastrar novo fornecedor</a>
	</div>


	<table class="table table-stripped table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Empresa</th>
				<th scope="col">CNPJ</th>
				<th scope="col">Endereco</th>
				<th scope="col">Telefone</th>
				<th scope="col">Email</th>
				<th scope="col">Ações</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				@foreach (var fornecedor in Model)
				{
					<tr>
						<th scope="row">@fornecedor.Id</th>
						<td>@fornecedor.Empresa</td>
						<td>@fornecedor.CNPJ</td>
						<td>@fornecedor.Endereco</td>
						<td>@fornecedor.Telefone</td>
						<td>@fornecedor.Email</td>
						<td>
							<a asp-controller="Fornecedor" asp-action="Editar" asp-route-id="@fornecedor.Id" class="btn btn-warning mx-2">Editar</a>
							<a asp-controller="Fornecedor" asp-action="Excluir" asp-route-id="@fornecedor.Id" class="btn btn-danger mx-2">Excluir</a>
						</td>
					</tr>
				}
			}
			else
			{
				<tr><td><strong>Nenhum Fornecedor foi encontrado!</strong></td></tr>
			}
		</tbody>
	</table>
</div>

@{

}